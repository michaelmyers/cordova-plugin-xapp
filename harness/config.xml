<?xml version='1.0' encoding='utf-8'?>
<widget id="com.xappmedia.xapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cordova</name>
    <description>
       Harness for testing the XAPP Plugin
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- Icons -->
        <icon src="res/android/mipmap-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="res/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="res/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="res/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- Icons -->
        <icon src="res/ios/Icon-40.png" width="40" height="40" />
        <icon src="res/ios/Icon-40@2x.png" width="80" height="80" />
        <icon src="res/ios/Icon-60.png" width="60" height="60" />
        <icon src="res/ios/Icon-60@2x.png" width="120" height="120" />
        <icon src="res/ios/Icon-60@3x.png" width="180" height="180" />
        <icon src="res/ios/Icon-72.png" width="72" height="72" />
        <icon src="res/ios/Icon-72@2x.png" width="144" height="144" />
        <icon src="res/ios/Icon-76.png" width="76" height="76" />
        <icon src="res/ios/Icon-76@2x.png" width="152" height="152" />
        <icon src="res/ios/Icon-Small-50.png" width="50" height="50" />
        <icon src="res/ios/Icon-Small-50@2x.png" width="100" height="100" />
        <icon src="res/ios/Icon-Small.png" width="29" height="29" />
        <icon src="res/ios/Icon-Small@2x.png" width="58" height="58" />
        <icon src="res/ios/Icon.png" width="57" height="57" />
        <icon src="res/ios/Icon@2x.png" width="114" height="114" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="ios" spec="~4.1.1" />
    <engine name="browser" spec="~4.1.0" />
</widget>
